@page
@model E_commerce.Pages.adminpages.SellersModel

@{
    ViewData["Title"] = "Sellers List";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>@ViewData["Title"]</h1>
                <form method="get" asp-page="AdminHome">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-house-door"></i> Admin Home
                    </button>
                </form>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-hover table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Pincode</th>
                                <th>Shop Name</th>
                                <th>Verified</th>
                                <th>Action</th> 
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var seller in Model.SellersList)
                            {
                                <tr>
                                    <td>@seller.Id</td>
                                    <td>@seller.Name</td>
                                    <td>@seller.PhoneNumber</td>
                                    <td>@seller.Email</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(seller.Address))
                                        {
                                            <p>@seller.Address</p>
                                        }
                                    </td>
                                    <td>@seller.PinCode</td>
                                    <td>@seller.ShopName</td>
                                    <td>
                                        <span class="badge @(seller.IsVerified ? "bg-success" : "bg-warning")">
                                            @(seller.IsVerified ? "Verified" : "Not Verified")
                                        </span>
                                    </td>
                                    <td>
                                        
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@seller.Id" onsubmit="return confirm('Are you sure you want to delete this seller?');">
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
