@using Microsoft.AspNetCore.Http
@{
    var username = Context.Session.GetString("SellerName"); // Assuming you are storing the seller's username in the session
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BazaarBox</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E-commerce.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    
    <style>
       
        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            font-style: italic;
            color: #005bb5 !important; 
            text-transform: initial;
            letter-spacing: 1px;
        }

        
        .navbar-nav .nav-link {
            color: #005bb5 !important; 
            font-weight: 500;
            margin-right: 1rem;
        }

            .navbar-nav .nav-link:hover {
                color: #004080 !important; 
            }

       
        .navbar-nav .btn-logout {
            background-color: #ff4d4d; 
            border-color: #ff4d4d;
            color: #fff;
            font-weight: 600;
        }

       
        .fa-shopping-cart, .fa-shopping-bag {
            color: #005bb5;
            font-size: 1.5rem;
        }

      
        .dropdown-menu {
            background-color: #e6f2ff; 
            border: none;
        }

        .dropdown-item {
            color: #003366;
        }

            .dropdown-item:hover {
                background-color: #b3d1ff;
                color: #003366;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Sellerpages/SellerHome">BazaarBox</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Sellerpages/Orders">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/SellerPages/AddProduct">AddProduct</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/SellerPages/ManageProducts">ManageProducts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/SellerPages/ViewProducts">ViewProducts</a>
                        </li>
                    </ul>
                    
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="~/Sellerpages/SellerLogin">
                                <i class="fa fa-sign-out"> Logout</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()  
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BazaarBox - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
