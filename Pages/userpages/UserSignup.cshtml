@page
@model E_commerce.Pages.userpages.UserSignupModel
@{
    Layout = "_Layoutcredentials";
}

<div class="container ">
    <div class="row">
        <div class="col-md-3 col-lg-3">
            <p>

            </p>
        </div>

        <div class="col-md-6 col-lg-6">
           
            <form method="post" class="container-fluid bg-light" enctype="multipart/form-data" >
                <br />
                <div>
                    <h4 class="text-primary text-center">SignUp</h4>
                </div>
                <br />
                <div>
                    <label asp-for="signuppage.Name">Name</label>
                    <input type="text" asp-for="signuppage.Name" class="form-control" /><br>
                    <span asp-validation-for="signuppage.Name" class="text-danger"></span>
                   
                </div>


                
                <label asp-for="signuppage.Gender">Gender</label>
                <select asp-for="signuppage.Gender" asp-items="Model.genderoptions" class="form-control">
                    <option value="">select a gender</option>
                </select>
                <span asp-validation-for="signuppage.Gender" class="text-danger"> </span>
                <br />
                <div>
                    <label asp-for="signuppage.PhoneNumber">Mobile Number</label>
                    <input type="text" asp-for="signuppage.PhoneNumber" class="form-control" style="width: fit-content;">
                    <span asp-validation-for="signuppage.PhoneNumber" class="text-danger"></span>
                </div>
                
                <br>

                <div>
                    <label asp-for="signuppage.Email">emailid</label><br>
                    <input type="text" asp-for="signuppage.Email" class="form-control" style="width: fit-content;"><br><br>
                    <span asp-validation-for="signuppage.Email" class="text-danger"></span>
                </div>

                
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div>
                            <label asp-for="signuppage.Address1">address1</label><br>
                            <textarea asp-for="signuppage.Address1" style=" resize:vertical" class="form-control" ></textarea>
                            <span asp-validation-for="signuppage.Address1" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="signuppage.Pincode1">Pincode1</label><br>
                            <input type="number" asp-for="signuppage.Pincode1" class="form-control" >
                            <span asp-validation-for="signuppage.Pincode1" class="text-danger"></span>
                        </div>

                        
                    </div>
                    
                    <div class="col-lg-6 col-md-6">
                        <div>
                            <label asp-for="signuppage.Address2" aria-label="Optional">address2</label>
                            <span class="text-muted" style="font-size: 0.8rem;">(Optional)</span><br>
                            <textarea asp-for="signuppage.Address2" style=" resize:vertical" class="form-control" style="width: fit-content;"></textarea>
                            <span asp-validation-for="signuppage.Address2" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="signuppage.Pincode2">Pincode2</label><br>
                            <input type="number" asp-for="signuppage.Pincode2" class="form-control">
                            <span asp-validation-for="signuppage.Pincode2" class="text-danger"></span>
                        </div>
                    </div>
                    
                    
                   
                </div>
               
                <br>




                <div>
                    <label asp-for="signuppage.Password">password</label>
                    <input id="password1" type="text" asp-for="signuppage.Password" class="form-control" style="width: fit-content;">
                    <span asp-validation-for="signuppage.Password" class="text-danger"></span>
                </div>
                <br />
                <div>
                    <label asp-for="signuppage.ConfirmPassword">Confirm password</label>
                    <input id="password2" type="text" asp-for="signuppage.ConfirmPassword" class="form-control" style="width: fit-content;" onblur="checkPasswordMatch()">
                    <span asp-validation-for="signuppage.ConfirmPassword" class="text-danger"></span>
                    <span id="passwordMatchMessage" style="color: red; display: none;">Passwords do not match.</span>
                </div>
                <br />
                <div>
                    <label asp-for="signuppage.Image">Upload image</label>
                    <input asp-for="signuppage.Image" class="form-control" style="width: fit-content;">
                    <span asp-validation-for="signuppage.Image" class="text-danger"></span>
                    
                </div>
                <br />
                <button type="submit" class="btn btn-primary " style="width: fit-content;">Submit</button>
                <button type="reset" class="btn btn-primary" style="width: fit-content;">Reset</button>
            </form>
            <br>
            <a class="btn btn-primary" asp-area="" asp-page="/Index">
                Back to Home page
            </a>
        </div>

        <div class="col-md-3 col-lg-3">
        </div>
    </div>
</div>

