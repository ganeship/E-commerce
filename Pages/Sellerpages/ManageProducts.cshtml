@page
@model E_commerce.Pages.SellerPages.ManageProductsModel

@{
    ViewData["Title"] = "Manage Products";
}

<h1>Manage Your Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.SellerProducts)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>₹@product.Price</td>
                <td>@product.Quantity</td>
                <td>@(product.IsActive == 1 ? "Enabled" : "Disabled")</td>

                <td>
                    <form method="post" asp-page-handler="Edit" asp-route-id="@product.Id" style="display:inline;">
                        <button type="submit" class="btn btn-primary">Edit</button>
                    </form>
                    @if (product.IsActive == 1)
                    {
                        <form method="post" asp-page-handler="Disable" asp-route-id="@product.Id" style="display:inline;">
                            <button type="submit" class="btn btn-warning">Disable</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-page-handler="Enable" asp-route-id="@product.Id" style="display:inline;">
                            <button type="submit" class="btn btn-success">Enable</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
