@page
@model E_commerce.Pages.Sellerpages.SellerHomeModel
@{
    Layout = "_LayoutSeller";
}

<h2>Your Seller Dashboard</h2>

@if (Model.SellerProducts.Count == 0)
{
    <p>Welcome to your dashboard! No products have been added yet.</p>
    <p><a href="@Url.Page("AddProduct")">Add your first product here</a></p>
}
else
{
    <h3>Your Products</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Seller Name</th>
                <th>Seller Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.SellerProducts)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.SellerName</td>
                    <td>@product.SellerEmail</td>
                </tr>
            }
        </tbody>
    </table>
}
